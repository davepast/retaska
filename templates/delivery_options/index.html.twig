{% extends 'base.html.twig' %}

{% block title %}DeliveryOptions index{% endblock %}

{% block body %}
    <h1>DeliveryOptions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for delivery_option in delivery_options %}
            <tr>
                <td>{{ delivery_option.id }}</td>
                <td>{{ delivery_option.name }}</td>
                <td>{{ delivery_option.description }}</td>
                <td>{{ delivery_option.price }}</td>
                <td>
                    <a href="{{ path('delivery_options_show', {'id': delivery_option.id}) }}">show</a>
                    <a href="{{ path('delivery_options_edit', {'id': delivery_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('delivery_options_new') }}">Create new</a>
{% endblock %}
