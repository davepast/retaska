{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Count</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Name</th>
                <th>AddressStreet</th>
                <th>AddressCity</th>
                <th>AddressZIP</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.count }}</td>
                <td>{{ order.email }}</td>
                <td>{{ order.telephone }}</td>
                <td>{{ order.name }}</td>
                <td>{{ order.addressStreet }}</td>
                <td>{{ order.addressCity }}</td>
                <td>{{ order.addressZIP }}</td>
                <td>{{ order.note }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
