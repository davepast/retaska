{% extends 'base.html.twig' %}

{% block title %}{{ homepage.heading }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ homepage.heading }} {{ product.name|capitalize }}</h1>

    <div class="card" style="width: 45rem;">
        <div class="card-body">
            <h5 class="card-title">{{ product.name|capitalize }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ product.stock }} ks skladem</h6>
            <p class="card-text">{{ product.description|capitalize }}</p>
            <p class="card-text">Kategorie: {{ product.category.description|capitalize }}</p>
            <a href="{{ path('list')}}" class="btn btn-info">Zpět na seznam produktů</a>
            <div class="form-group">
                <label for="sel1">Množství</label>

                <select class="form-control" id="sel1" style="width: 55px">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
                <a href="{{ path('ordering', {id: product.id} )}}" class="btn btn-success">Přidat do košíku</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
