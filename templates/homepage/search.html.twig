{% extends 'base.html.twig' %}

{% block title %}{{ homepage.heading }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="example-wrapper">
        <h1>{{ searchedFor == "" ? "Nebyl zadán výraz pro vyhledávání, zde je seznam všech produktů:" : 'Vyhledání produktů klíčovým slovem "' ~ searchedFor|format ~ '": '}}</h1>
        <br>
        <div class="container">
            <div class="row">
                <div class="card-group">
                    {% for product in products %}
                    {% include 'product_card.html.twig' %}
                    {% if loop.index % 3 == 0 %}
                </div>
                <br>
                <div class="card-group">
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>


    </div>

{% endblock %}


