{% extends 'base.html.twig' %}

{% block title %}{{ homepage.heading }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>{{ homepage.heading }}</h1>

    <div class="container">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light">

                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

                    <a href="{{ path('list') }}" id="selector-all" class="list-group-item list-group-item-action {{ route == 'list' ? 'active'}}">všechny</a>
                    {% for category in categories %}
                        <li class="nav-item">
                        <a href="{{ path('list_id', {id: category.id}) }}" id="category-selector-not-all-category-{{ category.id }}" class="list-group-item list-group-item-action {{ route == 'list_id' ? param == category.id ? 'active' }}" onclick="">{{ category.description }}</a>
                        </li>
                    {% endfor %}
                </ul>
