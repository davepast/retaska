{% extends 'base.html.twig' %}

{% block title %}{{ homepage.heading }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="example-wrapper">
        <h1>{{ homepage.heading }}</h1>
    </div>
    <div class="container-fluid">
        <div class="col-md-12">

    <div class="row">
            <div class="list-group list-group-horizontal">
                <a href="{{ path('list') }}" id="selector-all" class="list-group-item list-group-item-action {{ route == 'list' ? 'active'}}">Všechno</a>
                {% for category in categories %}
                <a href="{{ path('list_id', {id: category.id}) }}" id="category-selector-not-all-category-{{ category.id }}" class="list-group-item list-group-item-action {{ route == 'list_id' ? param == category.id ? 'active' }}" onclick="">{{ category.description }}</a>
                {% endfor %}
        </div>
        {% for product in products %}
            {% if loop.index0 % 3 == 0 %}
                </div><br><div class="row">
            {% endif %}
            <div class="col-sm-4">
                <div class="card" style="width: 18rem; " id="category-{{ product.category.id }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name|capitalize }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{% if product.stock < 1 %} Není skladem {% else %} {{ product.stock }} ks skladem {% endif %}</h6>
                        {% if product.description|length > 65 %}
                            <a class="card-text">{{ product.description|slice(0, 65) |capitalize }} <a href="{{ path('detail', {'id': product.id}) }}">...více</a></p>
                        {% else %}
                        <p class="card-text">{{ product.description|capitalize }}</p>
                        {% endif %}
                                <p class="card-text">Kategorie: <a href="{{ path('list_id', {'id': product.category.id } ) }}">{{ product.category.description|capitalize }}</a></p>
                                <table>
                                    <td>
                                        <a href="{{ path('detail', {'id': product.id }) }}" class="btn btn-info">Detail</a>
                                    </td>
                                    <td>
                                        {% if product.stock <= 0 %}
                                        Není skladem
                                            <script>
                                                $('a.btn.btn-success#'+{{ product.id }}).hide();
                                            </script>
                                        {% else %}
                                            <select class="form-control" id="sel1" style="width: 55px">
                                                {% for i in range (0, product.stock) %}
                                                    <option>{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a id="{{ product.id}}" href="{{ path('basket_add_to_cart', {id: product.id} )}}" class="btn btn-success">Přidat do košíku</a>
                                    </td>
                                </table>
                                {% if product.stock <= 0 %}
                                <script>
                                    $('a.btn.btn-success#'+{{ product.id }}).hide();
                                </script>
                                {% endif %}
                    </div>
                </div>
            </div>
    {% endfor %}
        </div>
    </div>
    </div>
    </div>
{% endblock %}
