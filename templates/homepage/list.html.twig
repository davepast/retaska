{% extends 'base.html.twig' %}

{% block title %}{{ homepage.heading }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1>{{ homepage.heading }}</h1>
</div>
<div class="container-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="list-group list-group-horizontal">
                <a href="{{ path('list') }}" id="selector-all" class="list-group-item list-group-item-action {{ route == 'list' ? 'active'}}">VÅ¡echno</a>
                {% for category in categories %}
                <a href="{{ path('list_id', {id: category.id}) }}" id="category-selector-not-all-category-{{ category.id }}" class="list-group-item list-group-item-action {{ route == 'list_id' ? param == category.id ? 'active' }}" onclick="">{{ category.description }}</a>
                {% endfor %}
            </div>
            {% for product in products %}
            {% if loop.index0 % 3 == 0 %}
            </div><br><div class="row">
            {% endif %}
            <div class="col-sm-4">
                {% include 'product_card.html.twig' %}
            </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}