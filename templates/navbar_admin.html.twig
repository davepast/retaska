{% set route = app.request.attributes.get('_route') %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">reTaska.cz</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {{ route ==  'homepage' ? 'active' }}">
                <a class="nav-link" href="{{ path('homepage') }}">Zpět na obchod <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item {{ route starts with  'product' ? 'active' }}">
                <a class="nav-link" href="{{ path('product_index') }}" {{ route starts with  'product' ? 'onclick="return false;"' }}>Správa produktů</a>
            </li>
            <li class="nav-item {{ route starts with  'category' ? 'active' }}">
                <a class="nav-link" href="{{ path('category_index') }}" {{ route starts with  'category' ? 'onclick="return false;"' }}>Správa kategorií</a>
            </li>





            <!-- disabled item
             <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
            </li> --!>


        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Vyhledávání" aria-label="Hledat">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Hledat</button>
        </form>
    </div>
</nav>